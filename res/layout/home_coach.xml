<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp" >

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Bem-vindo Joel Santana"
            android:id="@+id/tvWelcome"
            android:textSize="24dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Sair" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Úlitmos treinos:"
            android:id="@+id/textView2"
            android:layout_marginLeft="50dp"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="5dp"
            android:text="João Mário"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvDateAndTime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:text="04/11/2013 - 08:30:00"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvNado1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="2dp"
            android:text="Crawl: 40:23"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvNado2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="2dp"
            android:text="Costas: 15:46"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="15dp"
            android:text="Lucas Rolemberg"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvDateAndTime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:text="23/10/2013 - 14:20:00"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvNado3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="2dp"
            android:text="Borboleta: 22:43"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvNado4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="2dp"
            android:text="Crawl: 12:04"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left|center_vertical"
        android:id="@+id/linearLayout">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btPerfil"
            android:src="@android:drawable/ic_menu_myplaces" />

        <ImageButton
            android:id="@+id/btUsuarios"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="0dp"
            android:src="@android:drawable/ic_menu_my_calendar" />

        <ImageButton
            android:id="@+id/btTreinos"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="0dp"
            android:src="@android:drawable/ic_menu_recent_history" />

        <ImageButton
            android:id="@+id/btRanking"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="0dp"
            android:src="@android:drawable/ic_menu_sort_by_size" />

    </LinearLayout>

</LinearLayout>