<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="79dp">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Bem-vindo Mário Silva!"
            android:id="@+id/textView"
            android:textSize="24dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Sair"
            android:id="@+id/button" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="360dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Úlitmos treinos:"
            android:id="@+id/textView2"
            android:layout_marginLeft="50dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04/11/2013 - 08:30:00"
            android:id="@+id/textView3"
            android:layout_marginLeft="70dp"
            android:textSize="18dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crawl: 40:23"
            android:id="@+id/textView4"
            android:layout_marginLeft="90dp"
            android:textSize="18dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Costas: 15:46"
            android:id="@+id/textView5"
            android:layout_marginLeft="90dp"
            android:textSize="18dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23/10/2013 - 14:20:00"
            android:id="@+id/textView6"
            android:layout_marginLeft="70dp"
            android:textSize="18dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Borboleta: 22:43"
            android:id="@+id/textView7"
            android:layout_marginLeft="90dp"
            android:textSize="18dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crawl: 12:04"
            android:id="@+id/textView8"
            android:layout_marginLeft="90dp"
            android:textSize="18dp"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left|center_vertical">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageButton"
            android:src="@android:drawable/ic_menu_myplaces" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageButton2"
            android:src="@android:drawable/ic_menu_my_calendar"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageButton4"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

</LinearLayout>